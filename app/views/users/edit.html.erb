<h1>User info</h1>
<%= form_for(@user) do |f|%>

  <% if @user.errors.any? %>
    <%= @user.errors.count %>件のerrorが発生しました
    <% @user.errors.full_messages.each do |message| %>
        <%= message %>
    <% end %>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :profile_image %><br />
    <%= f.attachment_field :profile_image %>
  </div>

  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction %>
  </div>

  <%= f.submit 'Update User' %>

<% end %>
