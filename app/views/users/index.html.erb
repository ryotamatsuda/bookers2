<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', book: @book_for_list, user: current_user %>
    </div>
    <div class="col-md-9">
      <div class="body">
        <h1>Users</h1>
        <table class="table table-striped">
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
