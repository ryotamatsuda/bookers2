<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', book: @book, user: current_user %>
    </div>
    <div class="col-md-9">
      <div class="body">
        <h1>Books</h1>
        <table class="table table-striped">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
            <td><%= link_to book.title,book_path(book.id) %></td>
            <td align="center"><%= book.body %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
